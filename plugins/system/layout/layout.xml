<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="system" method="upgrade">
	<name>plg_system_layout</name>
	<author>Amy Stephen</author>
	<creationDate>March 2012</creationDate>
	<copyright>Copyright (C) 2005 - 2012 Open Source Matters. All rights reserved.</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>AmyStephen@gmail.com</authorEmail>
	<authorUrl>molajo.org</authorUrl>
	<version>1.0</version>
	<description>PLG_SYSTEM_LAYOUT_XML_DESCRIPTION</description>
	<files>
		<filename plugin="layout">layout.php</filename>
        <filename>index.html</filename>
        <folder>com_content</folder>
        <folder>language</folder>
	</files>
	<languages folder="language/en-GB">
		<language tag="en-GB">en-GB.plg_system_layout.ini</language>
		<language tag="en-GB">en-GB.plg_system_layout.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="override_front_archive" type="radio" default="1" description="PLG_SYSTEM_LAYOUT_OVERRIDE_FRONT_ARCHIVE_DESC" label="PLG_SYSTEM_LAYOUT_OVERRIDE_FRONT_ARCHIVE">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field name="override_admin_edit" type="radio" default="1" description="PLG_SYSTEM_LAYOUT_OVERRIDE_ADMIN_EDIT_DESC" label="PLG_SYSTEM_LAYOUT_OVERRIDE_ADMIN_EDIT">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
